# ==========================
# Lidarr-YTDLP Dockerfile
# ==========================
FROM python:3.12-slim

# Install dependencies: ffmpeg for audio conversion + yt-dlp
RUN apt-get update && \
    apt-get install -y --no-install-recommends ffmpeg curl && \
    pip install --no-cache-dir yt-dlp fastapi uvicorn requests mutagen && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Set up working directory
WORKDIR /app

# Copy your app
COPY app.py /app/app.py

# Default environment variables
ENV TZ=Etc/UTC \
    LIDARR_URL=http://localhost:8686/api/v1 \
    LIDARR_API_KEY=changeme \
    MUSIC_DIR=/music \
    CHECK_INTERVAL=3600

# Create music directory
RUN mkdir -p /music

# Expose dashboard port
EXPOSE 5004

# Run the FastAPI app with Uvicorn
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5004"]
